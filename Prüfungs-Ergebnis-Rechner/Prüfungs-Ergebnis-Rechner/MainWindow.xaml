<Window x:Class="Prüfungs_Ergebnis_Rechner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prüfungs_Ergebnis_Rechner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <ListBox BorderThickness="0" Height="374" Width="231" d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Left" Canvas.Top="26" VerticalAlignment="Top" Margin="348,60,0,0"/>
        <ListBox x:Name="ReachedPointsList" ItemsSource="{Binding TextBoxes}" BorderBrush="Black" BorderThickness="0,0,4,0" Height="374" Width="106" d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Left" Canvas.Left="222" VerticalAlignment="Top" Canvas.Top="26" Margin="584,58,0,0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>

                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox BorderThickness="0" Height="374" Width="105" d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Left" Canvas.Left="333" VerticalAlignment="Top" Canvas.Top="26" Margin="695,58,0,0"/>
        <ListBox Grid.Column="0" x:Name="Tester_Liste" ItemsSource="{Binding Pupils}" Margin="0,60,460,-2" BorderBrush="#FF080408" BorderThickness="2,2,2,2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Path=ID}"/>
                        <TextBlock Text="{Binding Path=Name}"/>
                        <TextBlock Text="{Binding Path=Vorname}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="AddTester" Content="Prüfling Hinzufügen" HorizontalAlignment="Left" Margin="5,14,0,0" VerticalAlignment="Top" Width="110" Height="30"/>

    </Grid>
</Window>
