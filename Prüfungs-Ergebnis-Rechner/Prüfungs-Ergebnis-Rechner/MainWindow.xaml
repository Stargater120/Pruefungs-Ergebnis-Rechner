<Window x:Class="Prüfungs_Ergebnis_Rechner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prüfungs_Ergebnis_Rechner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="Berechnungs_Feld" Margin="355,34,0,0" Grid.ColumnSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="230"/>
                    <ColumnDefinition Width="105"/>
                    <ColumnDefinition Width="4"/>
                    <ColumnDefinition Width="105"/>
                </Grid.ColumnDefinitions>
            </Grid>
            <ListBox Grid.Column="1" BorderThickness="0" Height="400" Width="230" d:ItemsSource="{d:SampleData ItemCount=5}"/>
            <ListBox Grid.Column="1" BorderBrush="Black" BorderThickness="0,0,4,0" Height="400" Width="106" d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Center" Canvas.Left="222" VerticalAlignment="Center"/>
            <ListBox Grid.Column="4" BorderThickness="0" Height="400" Width="105" d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Left" Canvas.Left="340" VerticalAlignment="Center"/>
        </Canvas>
        <ListBox x:Name="Tester_Liste" ItemsSource="{Binding Pupils}" Margin="0,58,460,0" BorderBrush="#FF080408" BorderThickness="2,2,2,2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Path=ID}"/>
                        <TextBlock Text="{Binding Path=Name}"/>
                        <TextBlock Text="{Binding Path=Vorname}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="AddTester" Content="Prüfling Hinzufügen" HorizontalAlignment="Left" Margin="5,14,0,0" VerticalAlignment="Top" Width="110" Height="30"/>

    </Grid>
</Window>
